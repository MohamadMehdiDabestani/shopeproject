@model List<GetWishListViewModel>
@section Header {
<title>[shope name] - لیست علاقه مندی ها</title>
}
@section Nav {
<partial name="_NavbarShadow" />
}
<div class="u-s-p-y-60">
    <div class="section__content">
        <div class="container">
            <div class="breadcrumb">
                <div class="breadcrumb__wrap">
                    <ul class="breadcrumb__list">
                        <li class="has-separator">
                            <a href="/">خانه</a>
                        </li>
                        <li class="has-separator">
                            <a href="/Account">حساب کاربری</a>
                        </li>
                        <li class="is-marked">
                            <a href="/account/wishlist">لیست علاقه مندی ها</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="u-s-p-b-60">

    <div class="section__intro u-s-m-b-60">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section__text-wrap">
                        <h1 class="section__heading u-c-secondary">لیست علاقه مندی ها</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="section__content">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12">
                    @foreach (var item in Model)
                    {
                        <div class="w-r u-s-m-b-30">
                            <div class="w-r__container">
                                <div class="w-r__wrap-1">
                                    <div class="w-r__img-wrap">
                                        <img class="u-img-fluid" src="@item.ImageName" alt="@item.AltImage" />
                                    </div>
                                    <div class="w-r__info">
                                        <span class="w-r__name">
                                            <a href="/product/@item.ProductId">@item.Title</a></span>
                                        <span class="w-r__category">
                                            <a href="/product?groupId=@item.GroupId">@item.GroupTitle</a></span>
                                        <span class="w-r__price">@item.Price</span>
                                    </div>
                                </div>
                                <div class="w-r__wrap-2">
                                    @if (!item.InCart)
                                    {
                                        <form method="POST" action="/account/addcart" class="d-inline">
                                            <input type="hidden" value="@item.ProductId" name="ProductId" />
                                            <input type="hidden" value="1" name="Count" />
                                            <button type="submit" class="w-r__link btn--e-brand-b-2">اضافه کردن به سبد
                                                خرید</button>
                                        </form>
                                    }
                                    <a class="w-r__link btn--e-transparent-platinum-b-2"
                                    href="/product/@item.ProductId">ادامه</a>

                                    <a class="w-r__link btn--e-transparent-platinum-b-2"
                                    href="/account/deletewish/@item.Id">حذف</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="col-lg-12">
                    <div class="route-box">
                        <div class="route-box">
                            <div class="route-box__g">
                                <a class="route-box__link" href="/Account/DeleteWish">
                                    <span>حذف آیتم ها</span>
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>