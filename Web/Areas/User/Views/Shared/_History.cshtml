@using System.Security.Claims
@inject IUserServices _user;
@{
    var counts = await _user.GetCountForAccountList(int.Parse(User.Claims.FirstOrDefault(u=> u.Type == ClaimTypes.NameIdentifier).Value));
}
<div class="dash__box dash__box--bg-white dash__box--shadow dash__box--w">
    <div class="dash__pad-1">
        <ul class="dash__w-list">
            <li>
                <div class="dash__w-wrap">

                    <span class="dash__w-icon dash__w-icon-style-1"><i class="fas fa-cart-arrow-down"></i></span>

                    <span class="dash__w-text">@counts.Bought</span>

                    <span class="dash__w-name">خریدهای انجام شده</span>
                </div>
            </li>   
            <li>
                <div class="dash__w-wrap">

                    <span class="dash__w-icon dash__w-icon-style-3"><i class="far fa-heart"></i></span>

                    <span class="dash__w-text">@counts.WishList</span>

                    <span class="dash__w-name">علاقه مندی ها</span>
                </div>
            </li>
        </ul>
    </div>
</div>