@model LoginViewModel
@section Header {
<title>[Shope Name] - Login</title>
}
@section Nav {
<partial name="_NavbarShadow" />
}
@{
    var returnurl = Context.Request.Query["ReturnUrl"].ToString();
    returnurl = string.IsNullOrEmpty(returnurl) ? "/Account" : returnurl;
}
<!--====== Section 1 ======-->
<div class="u-s-p-y-60">
    <!--====== Section Content ======-->
    <div class="section__content">
        <div class="container">
            <div class="breadcrumb">
                <div class="breadcrumb__wrap">
                    <ul class="breadcrumb__list">
                        <li class="has-separator">

                            <a href="/">خانه</a>
                        </li>
                        <li class="is-marked">

                            <a href="/Login">ورود</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!--====== End - Section 1 ======-->


<!--====== Section 2 ======-->
<div class="u-s-p-b-60">

    <!--====== Section Intro ======-->
    <div class="section__intro u-s-m-b-60">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="section__text-wrap">
                        <h1 class="section__heading u-c-secondary">آیا قبلا ثبت نام کرده اید ؟</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--====== End - Section Intro ======-->


    <!--====== Section Content ======-->
    <div class="section__content">
        <div class="container">
            <div class="row row--center">
                <div class="col-lg-6 col-md-8 u-s-m-b-30">
                    <div class="l-f-o">
                        <div class="l-f-o__pad-box">
                            <h1 class="gl-h1">من کاربر جدید سایت هستم</h1>

                            <span class="gl-text u-s-m-b-30">با ساخت یک حساب در سایت [نام سایت] شما میتوانید از خدمات و
                                کالاهای ما استفاده کنید</span>
                            <div class="u-s-m-b-15">

                                <a class="l-f-o__create-link btn--e-transparent-brand-b-2" href="/Register">ساخت
                                    حساب</a>
                            </div>

                            <h1 class="gl-h1">ورود</h1>

                            <span class="gl-text u-s-m-b-30">اگر حساب کاربری دارید میتوانید وارد آن شوید</span>
                            <form class="l-f-o__form" asp-antiforgery="true" method="POST" asp-action="Login">
                                <input type="hidden" value="@returnurl" asp-for="Redirect" />
                                <div class="u-s-m-b-30">

                                    <label class="gl-label" for="login-email">ایمیل *</label>

                                    <input class="input-text input-text--primary-style" type="email" id="login-email"
                                        placeholder="آدرس ایمیل" required asp-for="Email">
                                    <span asp-validation-for="Email" class="error-text"></span>
                                </div>
                                <div class="u-s-m-b-30">

                                    <label class="gl-label" for="login-password">رمز عبور *</label>

                                    <input class="input-text input-text--primary-style" type="password"
                                        id="login-password" placeholder="رمز عبور" required asp-for="Password">
                                    <span asp-validation-for="Password" class="error-text"></span>
                                </div>
                                <div class="gl-inline">
                                    <div class="u-s-m-b-30">

                                        <button class="btn btn--e-transparent-brand-b-2" type="submit">ورود</button>
                                    </div>
                                    <div class="u-s-m-b-30">

                                        <a class="gl-link" href="/Account/ForgotPassword">رمز عبور را فراموش کرده ام</a>
                                    </div>
                                </div>
                                <div class="u-s-m-b-30">

                                    <!--====== Check Box ======-->
                                    <div class="check-box">

                                        <input type="checkbox" asp-for="RemmeberMe" id="remember-me">
                                        <div class="check-box__state check-box__state--primary">

                                            <label class="check-box__label" for="remember-me">مرا به خاطر بسپار</label>
                                        </div>
                                    </div>
                                    <!--====== End - Check Box ======-->
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--====== End - Section Content ======-->
</div>
<!--====== End - Section 2 ======-->
@if (ViewBag.Error != null)
{
    @section Footer {
<script src="/js/sweetalert.min.js"></script>
<script>
    swal({
        title: "مشکلی پیش آمده",
        text: "کاربری یافت نشد",
        icon: "error",
        button: "باشه",
    });
</script>
}
}
@if (Context.Request.Query["active"].ToString() == "true")
{
@section Footer {
<script src="/js/sweetalert.min.js"></script>
<script>
    swal({
        title: "موفق",
        text: "حساب کاربری شما با موفقعیت فعال شد.",
        icon: "success",
        button: "باشه",
    });
</script>
}
}